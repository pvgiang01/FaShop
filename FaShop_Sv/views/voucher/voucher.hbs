    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content">
        <div class="row">
            <div class="col-sm-6">
                <h2>Vouchers</h2>
            </div>
            <div class="col-sm-6 text-right">
                <button type="button" class="btn btn-primary" onclick="goToNewVoucher()">AddNew</button>
            </div>
        </div>
        <form action="#" method="get" class="input-group sidebar-form">
            <div class="input-group">
                <input type="text" id="key" name="key" class="form-control" placeholder="Search..." />
                <span class="input-group-btn">
                    <button onclick="search()" class="btn btn-success">Search</button>
                </span>
            </div>
        </form>
        <table class="table table-bordered text-center">
            <thead>
                <tr>
                    <th>Stt</th>
                    <th>Name</th>
                    <th>Code</th>
                    <th>Value</th>
                    <th>Expired Time</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each voucher}}
                <tr class="text-center">
                    <td>{{ soThuTu @index}}</td>
                    <td>{{ this.name}}</td>
                    <td>{{ this.code }}</td>
                    <td>{{ this.value }}</td>
                    <td>{{convertDate this.expiredTime false false}}</td>
                    <th>{{ this.description }}</th>
                    <td><img width="200" height="130" src="{{ this.image}}"></td>
                    <td class="text-center">
                        <button onclick="goToEditVoucher('{{this._id}}')" type="button"
                            class="btn btn-warning">Edit</button>
                        <button type="button" onclick="goDelete('{{this._id}}')" data-toggle="modal"
                            data-target="#modal" class="btn btn-danger">Remove</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        </section>
    </div>
    </section><!-- /.content -->
