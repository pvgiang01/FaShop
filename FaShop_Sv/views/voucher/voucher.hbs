<div class="modal" tabindex="-1" role="dialog" id="modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Delete Voucher</h3>
            </div>
            <div class="modal-body">
                <div class="panel-body">
                    <h5>Do you want delete?</h5>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" onclick="onDelete()" class="btn btn-primary">Yes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<script>
    let deleted_id;
    const goToProduct = () => {
        window.location.href = '/product'
    }
    const goToNewVoucher = () => {
        window.location.href = '/voucher/addVoucher'
    }
    const goToCategory = () => {
        window.location.href = '/category'
    }
    const goToNewCategory = () => {
        window.location.href = '/category/add-category'
    }
    const goToUser = () => {
        window.location.href = '/usermanager'
    }
    const goHome = () => {
        window.location.href = '/dashboard'
    }
    const goToCart = () => {
        window.location.href = '/order'
    }
    const goToAdmin = () => {
        window.location.href = '/adminmanager'
    }
    const goToStatistical = () =>{
        window.location.href = '/statistical    '
    }
    const goToEditVoucher = (id) => {
        window.location.href = `/voucher/edit/${id}`
    }
    const goDelete = (id) => {
        deleted_id = id;
    }
    const fechAPI = async (url, option) => {
        const res = await fetch(url, option);
        return res.json();
    }
    const onDelete = async () => {
        const url = `http://localhost:3000/voucher/${deleted_id}`;
        const option = {
            method: 'delete',
            headers: { 'Content-Type': 'application/json' }
        }
        try {
            await fechAPI(url, option);
            window.location.href = '/voucher';
        } catch (e) {
            console.log('Delete error: ', e);
        }
    }
    function search() {
        let value = document.getElementById('key').value;
        $.ajax({
            type: "GET",
            url: '/voucher/search/' + value,
            success: function (data) {
                window.location.href = '/voucher/search/' + value
            }
        });
    }
</script>