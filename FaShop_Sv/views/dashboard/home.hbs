<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const labels = [
        'Canceled',
        'Delivered',
        'Processing',
        'Delivering'
    ];

    let canceled = document.getElementById('canceled').value;
    let delivered = document.getElementById('delivered').value;
    let processing= document.getElementById('processing').value;
    let delivering = document.getElementById('delivering').value;

    const data = {
        labels: labels,
        datasets: [{
            label: 'My First dataset',
            backgroundColor: [
                'rgb(255,0,0)',
                'rgb(240,230,140)',
                'rgb(255,165,0)',
                'rgb(0,206,209)', 
            ],
            data: [canceled, delivered,processing,delivering],
        }]
    };

    const config = {
        type: 'pie',
        data: data,
        options: {}
    };

    const myChart = new Chart(
        document.getElementById('myChart'),
        config
    );

