<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h2>Order Details</h2>
        </div>
        <div class="col-sm-6 text-right">
            <button type="button" class="btn btn-primary" onclick="goBackorder()">Go
                back</button>
        </div>
    </div>
        <div class="form-group">
            <label>User: {{user.name}}</label>
        </div>
        <div class="form-group">
            <label for="createdTime">Created Time:
                {{formatDate order.createdTime}}</label>
        </div>
        <div class="form-group">
            <label for="">Status: {{order.status}}</label>
        </div>
        <div class="form-group">
            <label for="">Total: {{this.total}}</label>
        </div>
        <table class="table text-center">
            <thead>
                <tr>
                    {{! id or số thứ tự }}
                    <th>STT</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody id="tblBody">
                {{#each orderDetail.products}}
                <tr>
                    {{! id or số thứ tự }}
                    <td>{{soThuTu @index}}</td>
                    <td><img width="200" height="130" src="{{this.image}}"></td>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.quantity}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
</div>

<script>
    function goBackorder() {
        window.location.href = '/order'
    }
</script>