<div class="container">
    <div class="row">
        <div class="col-sm-2">
            <h1>Order Details</h1>
        </div>
        <div class="col-sm-6 text-right">
            <button type="button" class="btn btn-primary" onclick="goBackorder()">Go
                back</button>
        </div>
    </div>
        <div class="form-group">
            <label><h2>User: {{user.name}}</h2></label>
        </div>
        <div class="form-group">
            <label for="createdTime"><h2>Created Time:
                {{formatDate order.createdTime}}</h2></label>
        </div>
        <div class="form-group">
            <label for=""><h2>Status: {{order.status}}</h2></label>
        </div>
        <div class="form-group">
            <label for=""><h2>Total: {{this.total}}</h2></label>
        </div>
        <table class="table text-center">
            <thead>
                <tr>
                    {{! id or số thứ tự }}
                    <th><h2>STT</h2></th>
                    <th><h2>Image</h2></th>
                    <th><h2>Name</h2></th>
                    <th><h2>Price</h2></th>
                    <th><h2>Quantity</h2></th>
                </tr>
            </thead>
            <tbody id="tblBody">
                {{#each orderDetail.products}}
                <tr>
                    {{! id or số thứ tự }}
                    <td><h2>{{soThuTu @index}}</h2></td>
                    <td><h2><img width="200" height="130" src="{{this.image}}"></h2></td>
                    <td><h2>{{this.name}}</h2></td>
                    <td><h2>{{this.price}}</h2></td>
                    <td><h2>{{this.quantity}}</h2></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
</div>

<script>
    function goBackorder() {
        window.location.href = '/order'
    }
</script>