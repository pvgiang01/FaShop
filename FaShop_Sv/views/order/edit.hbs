<div class="col-sm-12" style="margin-top: 16px;">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h2>Edit Order</h2>
      </div>
      <div class="col-sm-6 text-right">
        <button type="button" class="btn btn-primary" onclick="goBackorder()">Go back</button>
      </div>
    </div>
    <form action="/order/edit/{{order._id}}" method="POST">
      <div class="form-group">
        <label>Name: {{user.name}}</label>
      </div>
      <div class="form-group">
        <label for="createdTime">Created Time: {{formatDate order.createdTime}}</label>
      </div>
      <div class="form-group">
        <label for="">Status</label>
        <select class="custom-select" name="status">
          {{#each statusList}}
          {{#if (isDefine this.id ../order.status)}}
          <option selected value="{{this.id}}">
            {{this.name}}
          </option>
          {{else}}
          <option value="{{this.id}}">
            {{this.name}}
          </option>
          {{/if}}
          {{/each}}
        </select>
      </div>
      <br>
      <br>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
<script>
  function goBackorder() {
    window.location.href = '/order'
  }

</script>